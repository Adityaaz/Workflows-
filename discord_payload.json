name: Update Discord Webhook

on:
  push:
    branches:
      - main  # Run whenever you push to main branch

jobs:
  discord:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Send JSON to Discord Webhook
        uses: joelwmale/discord-webhook@v2
        with:
          url: ${{ secrets.DISCORD_WEBHOOK_URL }}
          content: ${{ steps.read_payload.outputs.content }}

      - name: Read JSON payload
        id: read_payload
        run: |
          echo "content=$(cat discord_payload.json)" >> $GITHUB_OUTPUT
